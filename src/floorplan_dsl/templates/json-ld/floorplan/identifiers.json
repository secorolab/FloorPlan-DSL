{# Points #}
{% macro point_id(identifier) -%}
geom:{{ identifier }}
{%- endmacro %}

{% macro space_point_id(space) -%}
point-center-{{space.name}}
{%- endmacro %}

{% macro shape_point_id(space, point_id) -%}
point-shape-{{ space.name }}-{{ point_id }}
{%- endmacro %}

{% macro feature_shape_point_id(feature, point_id) -%}
point-feature-shape-{{ feature.name }}-{{ point_id }}
{%- endmacro %}

{% macro wall_point_id(space, wall) -%}
point-frame-{{ space.name }}-wall-{{ wall.idx }}
{%- endmacro %}

{% macro wall_corner_point_id(space, wall, corner_id) -%}
point-corner-{{ space.name }}-wall-{{ wall.idx }}-{{ corner_id }}
{%- endmacro %}

{# Frames #}
{% macro frame_id(name) -%}
geom:{{ name }}
{%- endmacro %}

{% macro space_frame_id(space) -%}
{{ space.frame.name }}
{%- endmacro %}

{% macro wall_frame_id(wall) -%}
{{wall.frame.name}}
{%- endmacro %}

{# Polygon #}
{% macro polygon_id(space) -%}
polygon-{{space.name}}
{%- endmacro %}

{% macro wall_polygon_id(space, wall) -%}
polygon-{{space.name}}-wall-{{wall.idx}}
{%- endmacro %}

{% macro feature_polygon_id(space, feature) -%}
polygon-{{ space.name }}-feature-{{ feature.name }}
{%- endmacro %}

{# Coordinates #}
{% macro coord_pose_id(of, wrt) -%}
coord-pose-{{ of }}-to-{{ wrt }}
{%- endmacro %}

{% macro coord_position_id(point_id, space) -%}
coord-position-point-{{ point_id }}-to-{{ space.name }}-frame
{%- endmacro %}

{% macro coord_wall_pose_id(wall, space) -%}
coord-pose-of-wall-{{ wall.idx }}-frame-to-{{ space.name }}-frame
{%- endmacro %}

{% macro coord_position_corner_id(poly_id, space, wall) -%}
coord-position-corner-{{ poly_id }}-to-{{ space.name }}-wall-{{ wall.idx }}-frame
{%- endmacro %}

{# Pose #}
{% macro pose_id(of, wrt) -%}
pose-{{ of }}-wrt-{{ wrt }}
{%- endmacro %}

{% macro wall_pose_id(wall, space) -%}
pose-of-wall-{{ wall.idx }}-frame-to-{{ space.name }}-frame
{%- endmacro %}

{# Position #}

{% macro position_id(point_id, space) -%}
position-point-{{ point_id }}-to-{{ space.name }}-frame
{%- endmacro %}

{% macro corner_position_id(poly_id, space, wall) -%}
position-corner-{{ poly_id }}-to-{{ space.name }}-wall-{{ wall.idx }}-frame
{%- endmacro %}


{# Floorplan #}
{% macro space_id(space) -%}
space-{{ space.name }}
{%- endmacro %}

{% macro wall_id(space, wall) -%}
space-{{ space.name }}-wall-{{ wall.idx }}
{%- endmacro %}

{% macro feature_id(space, feature) -%}
feature-{{ space.name }}-{{ feature.name}}
{%- endmacro %}
