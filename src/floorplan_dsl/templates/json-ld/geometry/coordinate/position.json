{% extends "./geometry/coordinate/base.json" %}

{% block coord_id -%}
coord-{{ position.name }}
{%- endblock %}

{% block type %}
                "PositionReference", 
                "PositionCoordinate", 
                "VectorXY"
{% endblock %}

{% block as_seen_by -%}
    {{ position.wrt.name }}
{%- endblock %}

{% block reference %}
            "of-position": "floorplan:{% block of_position %}{{ position.name }}{% endblock %}",
            {{ super() }}
{% endblock %}

{% block units %}
"M",
{% endblock %}

{% block coords %}
    {% if position.translation.x %}
            "x": {{ position.translation.x.value }},
    {%- endif +%}
    {% if position.translation.y %}
            "y": {{ position.translation.y.value }},
    {%- endif +%}
    {% if position.translation.z %}
            "z": {{ position.translation.z.value }}
    {%- endif +%}
{% endblock %}