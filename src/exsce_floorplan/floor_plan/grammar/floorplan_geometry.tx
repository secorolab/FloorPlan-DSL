Meter:
    value=FLOAT 'm'
;

CartesianUnit:
    Meter
;

Point:
    '(' x=CartesianUnit ',' y=CartesianUnit ')'
;

Position:
    'x:' x=CartesianUnit ',' 'y:' y=CartesianUnit (',' 'z:' z=CartesianUnit)?
;

AngleInDegrees:
    value=FLOAT 'deg'
;

AngleInRadians:
    value=FLOAT 'rad'
;

Orientation:
    AngleInDegrees | AngleInRadians
;

PoseDescription:
    'translation:' translation=Position
    'rotation:' rotation=AngleInDegrees
;
